{
  "formatter": "prettier",
  "preferred_line_length": 120,
  "icon_theme": "Colored Zed Icons Theme Dark",
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    }
  },
  "file_finder": {
    "modal_max_width": "medium"
  },
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "theme": "One Dark Pro",
  "base_keymap": "VSCode",
  "vim_mode": true,
  "buffer_font_family": "Monaspace Neon",
  "buffer_font_size": 14,
  "buffer_line_height": "standard",
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "soft_wrap": "editor_width",
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "show_diagnostics": "errors"
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "completions": {
    "words": "enabled",
    "lsp": true
  },
  "vim": {
    "use_system_clipboard": "never",
    "highlight_on_yank_duration": 200
  },
  "terminal": {
    "font_size": 14,
    "font_family": "MonaspiceNe Nerd Font Mono",
    "dock": "bottom",
    "line_height": "standard",
    "cursor_shape": "bar"
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python.analysis": {
          "typeCheckingMode": "off"
        }
      }
    }
  },
  "languages": {
    "JSON": {
      "format_on_save": "on"
    },
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    },
    "TSX": {
      "format_on_save": "on"
    },
    // "JavaScript": {
    //   "language_servers": ["prettier", "tailwindcss-language-server"],
    //   "format_on_save": "on",
    //   "formatter": [
    //     {
    //       "code_actions": {
    //         "source.organizeImports": true
    //       }
    //     }
    //   ]
    // },
    "Go": {
      "language_servers": ["gopls"],
      "format_on_save": "on"
    }
  },
  "relative_line_numbers": true,
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/__pycache__",
    "**/.ruff_cache",
    "**/.ropeproject",
    // "**/node_modules",
    "**/*.egg-info",
    "**/.jj",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings"
  ],
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
